@model Project
@{
    ViewData["Title"] = "Project Details";
}

<div class="container">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Project Details: @Model.Name</h1>
        <a asp-action="Projects" class="d-none d-sm-inline-block btn btn-secondary">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Projects
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">Project Information</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Project Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Total Units</dt>
                        <dd class="col-sm-9">@(Model.Units?.Count ?? 0)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-info text-white">
            <h6 class="m-0 font-weight-bold">Project Units</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="bg-light">
                        <tr>
                            <th>Unit Code</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var unit in ViewBag.Units)
                        {
                            <tr>
                                <td>@unit.UnitCode</td>
                                <td>
                                    @if (unit.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Available</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="DeleteUnit" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this unit?');">
                                        <input type="hidden" name="id" value="@unit.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <h5>Add New Unit</h5>
                <form asp-action="AddUnit" method="post" class="row g-3">
                    <input type="hidden" name="ProjectId" value="@Model.Id" />
                    <div class="col-md-4">
                        <input type="text" name="UnitCode" class="form-control" placeholder="Unit Code" required>
                    </div>
                    <div class="col-md-4">
                        <select name="IsAvailable" class="form-select">
                            <option value="true">Available</option>
                            <option value="false">Not Available</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i> Add Unit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>