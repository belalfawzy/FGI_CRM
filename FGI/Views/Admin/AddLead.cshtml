@model Lead
@{
    ViewData["Title"] = "Add New Lead";
}

<div class="container-fluid px-3">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create New Lead</h1>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Lead Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="AddLead" method="post" id="leadForm">
                @Html.AntiForgeryToken()
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClientPhone" class="control-label">Client Phone *</label>
                            <input asp-for="ClientPhone" class="form-control" placeholder="Enter client phone number" />
                            <span asp-validation-for="ClientPhone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClientName" class="control-label">Client Name *</label>
                            <input asp-for="ClientName" class="form-control" placeholder="Enter client name" />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label">Project</label>
                            <select asp-for="ProjectId" class="form-control">
                                <option value="">Select Project (Optional)</option>
                            </select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitId" class="control-label">Unit</label>
                            <select asp-for="UnitId" class="form-control" id="UnitId">
                                <option value="">Search by Unit Code, Location, Owner, Price, Area, Type...</option>
                            </select>
                            <span asp-validation-for="UnitId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Comment" class="control-label">Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Enter any additional comments"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Unit Details Container -->
                <div id="unitDetailsContainer" class="mt-3"></div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Lead
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/toast-notifications.css" asp-append-version="true">
    
    <style>
        .form-control:disabled {
            background-color: #e9ecef;
            opacity: 1;
        }
        
        .form-control:disabled + .form-text {
            color: #6c757d;
        }
        
        .select2-container .select2-selection--single {
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
        }
        
        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: calc(1.5em + 0.75rem);
        }
        
        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: calc(1.5em + 0.75rem);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/toast-notifications.js" asp-append-version="true"></script>
    <script src="~/js/Admin/AddLead.js"></script>
}
