@model List<Project>
@{
    ViewData["Title"] = "Projects Management";
}

<div class="container">
    <h1 class="my-4">Projects Management</h1>

    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Add New Project</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateProjectWithUnit" method="post" id="projectForm">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Project Name</label>
                            <input type="text" name="Name" class="form-control form-control-lg" required>
                        </div>
                    </div>
                </div>

                <div class="unit-section mt-4">
                    <h5 class="mb-3 text-primary">Project Units</h5>
                    <div class="row unit-row align-items-end mb-3">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Unit Code</label>
                                <input type="text" name="Units[0].UnitCode" class="form-control unit-code" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Availability</label>
                                <select name="Units[0].IsAvailable" class="form-select">
                                    <option value="true">Available</option>
                                    <option value="false">Not Available</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="additionalUnitsContainer"></div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="button" id="addUnit" class="btn btn-outline-primary">
                        <i class="fas fa-plus-circle me-2"></i>Add Another Unit
                    </button>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Create Project
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Projects List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Project Name</th>
                            <th class="text-center">Units Count</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td class="align-middle fw-bold">@project.Name</td>
                                <td class="align-middle text-center">
                                    <span class="badge bg-primary rounded-pill">@(project.Units?.Count ?? 0)</span>
                                </td>
                                <td class="align-middle text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="ProjectDetails" asp-route-id="@project.Id"
                                           class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="DeleteProject" method="post"
                                              onsubmit="return confirm('Are you sure you want to delete this project?');">
                                            <input type="hidden" name="id" value="@project.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control-lg {
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-group .btn {
            padding: 0.375rem 0.75rem;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            let unitCount = 1;

            // Add new unit row
            $('#addUnit').click(function() {
                const newRow = `
                    <div class="row unit-row align-items-end mb-3">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <input type="text" name="Units[${unitCount}].UnitCode"
                                       class="form-control unit-code" placeholder="Unit Code" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <button type="button" class="btn btn-outline-danger remove-unit">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                $('#additionalUnitsContainer').append(newRow);
                unitCount++;
            });

            // Remove unit row
            $(document).on('click', '.remove-unit', function() {
                $(this).closest('.unit-row').remove();
                unitCount--;
            });

            // Form validation
            $('#projectForm').submit(function(e) {
                const unitCodes = $('.unit-code').map(function() {
                    return $(this).val().trim();
                }).get();

                const uniqueCodes = [...new Set(unitCodes)];

                if(unitCodes.length !== uniqueCodes.length) {
                    alert('Unit codes must be unique!');
                    return false;
                }

                if(unitCodes.some(code => code === '')) {
                    alert('Please fill all unit codes');
                    return false;
                }

                return true;
            });
        });
    </script>
}