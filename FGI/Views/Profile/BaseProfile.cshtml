@model FGI.ViewModels.BaseProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

@section Head {
    <link rel="stylesheet" href="~/css/bootstrap-profile.css" asp-append-version="true">
}

<div class="profile-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="profile-header fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <div class="profile-header-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <h1 class="profile-header-title">My Profile</h1>
                            <p class="profile-header-subtitle">Welcome to your personal dashboard</p>
                            <div class="profile-status">@Model.AccountStatus</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <button class="btn btn-primary btn-lg">
                        <i class="fas fa-edit me-2"></i>Edit Profile
                    </button>
                </div>
            </div>
            <!-- Floating Elements -->
            <div class="floating-element" style="top: 20px; right: 20px; width: 60px; height: 60px; background: #007bff;"></div>
            <div class="floating-element" style="bottom: 20px; left: 20px; width: 40px; height: 40px; background: #6f42c1;"></div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon primary">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="metric-value">@Model.TotalDaysInSystem</div>
                    <div class="metric-label">Days in System</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="metric-value">@Model.Role</div>
                    <div class="metric-label">User Role</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon warning">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="metric-value">@Model.CreatedAt.ToString("MMM yyyy")</div>
                    <div class="metric-label">Member Since</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon info">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="metric-value">@(Model.LastLoginAt?.ToString("MMM dd") ?? "Never")</div>
                    <div class="metric-label">Last Login</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- Personal Information -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-primary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Personal Information</h3>
                                <p class="card-header-subtitle">Your basic profile details</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Full Name</label>
                                <p class="form-control-plaintext">@Model.FullName</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">User ID</label>
                                <p class="form-control-plaintext">@Model.UserId</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Role</label>
                                <p class="form-control-plaintext">
                                    <span class="status-badge @Model.Role.ToLower()">@Model.Role</span>
                                </p>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Edit Information
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Status -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-success">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Account Status</h3>
                                <p class="card-header-subtitle">Your account information</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.AccountStatus</h4>
                                    <small class="text-muted">Account Status</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-primary">@Model.TotalDaysInSystem</h4>
                                    <small class="text-muted">Days Active</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">
                                <i class="fas fa-shield-alt me-2"></i>Security Settings
                            </button>
                            <button class="btn btn-outline-success">
                                <i class="fas fa-key me-2"></i>Change Password
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-warning">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-bolt"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Quick Actions</h3>
                                <p class="card-header-subtitle">Frequently used features</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <button class="btn btn-outline-primary w-100">
                                    <i class="fas fa-plus d-block mb-2"></i>
                                    Add Lead
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-outline-success w-100">
                                    <i class="fas fa-chart-bar d-block mb-2"></i>
                                    View Reports
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-outline-info w-100">
                                    <i class="fas fa-cog d-block mb-2"></i>
                                    Settings
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-outline-warning w-100">
                                    <i class="fas fa-question-circle d-block mb-2"></i>
                                    Help
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Information -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-info">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">System Information</h3>
                                <p class="card-header-subtitle">Your account details</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <h4 class="text-info">@Model.CreatedAt.ToString("yyyy")</h4>
                                <small class="text-muted">Joined</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-primary">@Model.TotalDaysInSystem</h4>
                                <small class="text-muted">Days Active</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-success">@Model.Role</h4>
                                <small class="text-muted">Role</small>
                            </div>
                        </div>
                        <div class="d-grid mt-3">
                            <button class="btn btn-info">
                                <i class="fas fa-info-circle me-2"></i>View Full Details
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>