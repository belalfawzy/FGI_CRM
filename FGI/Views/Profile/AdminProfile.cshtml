@model FGI.ViewModels.AdminProfileViewModel
@{
    ViewData["Title"] = "My Profile - Admin";
}

@section Head {
    <link rel="stylesheet" href="~/css/bootstrap-profile.css" asp-append-version="true">
}

<div class="profile-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="profile-header fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <div class="profile-header-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <div>
                            <h1 class="profile-header-title">Admin Profile</h1>
                            <p class="profile-header-subtitle">System Administrator Dashboard</p>
                            <div class="profile-status">@Model.AccountStatus</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="@Url.Action("Index", "Settings")" class="btn btn-primary btn-lg">
                        <i class="fas fa-cog me-2"></i>Settings
                    </a>
                </div>
            </div>
            <!-- Floating Elements -->
            <div class="floating-element" style="top: 20px; right: 20px; width: 60px; height: 60px; background: #007bff;"></div>
            <div class="floating-element" style="bottom: 20px; left: 20px; width: 40px; height: 40px; background: #6f42c1;"></div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="metric-value">@Model.TotalUsers</div>
                    <div class="metric-label">Total Users</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon success">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="metric-value">@Model.TotalLeads</div>
                    <div class="metric-label">Total Leads</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon warning">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="metric-value">@Model.TotalProjects</div>
                    <div class="metric-label">Total Projects</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon info">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="metric-value">@Model.TotalUnits</div>
                    <div class="metric-label">Total Units</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- User Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-primary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">User Management</h3>
                                <p class="card-header-subtitle">Manage system users and permissions</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-primary">@Model.MarketingUsers</h4>
                                    <small class="text-muted">Marketing Users</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.SalesUsers</h4>
                                    <small class="text-muted">Sales Users</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">
                                <i class="fas fa-list me-2"></i>View All Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lead Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-success">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Lead Management</h3>
                                <p class="card-header-subtitle">Track and manage leads</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.UnassignedLeads</h4>
                                    <small class="text-muted">Unassigned Leads</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.PendingAssignments</h4>
                                    <small class="text-muted">Pending Assignments</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Leads", "Admin")" class="btn btn-success">
                                <i class="fas fa-list me-2"></i>View All Leads
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Project Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-warning">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Project Management</h3>
                                <p class="card-header-subtitle">Manage real estate projects</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.TotalProjects</h4>
                                    <small class="text-muted">Total Projects</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.SystemUtilizationRate.ToString("P1")</h4>
                                    <small class="text-muted">System Utilization</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Projects", "Admin")" class="btn btn-warning">
                                <i class="fas fa-eye me-2"></i>View All Projects
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Unit Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-info">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Unit Management</h3>
                                <p class="card-header-subtitle">Manage available units</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.AvailableUnits</h4>
                                    <small class="text-muted">Available Units</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.SoldUnits</h4>
                                    <small class="text-muted">Sold Units</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("AllUnits", "Admin")" class="btn btn-info">
                                <i class="fas fa-list me-2"></i>View All Units
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="col-12 mb-4">
                <div class="profile-card">
                    <div class="card-header-secondary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Recent Activity</h3>
                                <p class="card-header-subtitle">Latest system activities</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>User</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RecentUsers.Any())
                                    {
                                        @foreach (var user in Model.RecentUsers.Take(3))
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fas fa-user-plus text-success me-2"></i>
                                                    New User Created
                                                </td>
                                                <td>@user.FullName</td>
                                                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                                <td><span class="status-badge sales">Completed</span></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted">No recent activity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>