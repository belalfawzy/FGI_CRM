@model FGI.ViewModels.SalesProfileViewModel
@{
    ViewData["Title"] = "My Profile - Sales";
}

@section Head {
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4e73df',
                        'primary-dark': '#3a56c4',
                        secondary: '#6f42c1',
                        success: '#1cc88a',
                        info: '#36b9cc',
                        warning: '#f6c23e',
                        danger: '#e74a3b',
                        light: '#f8f9fc',
                        dark: '#5a5c69'
                    }
                }
            }
        }
    </script>
    <style>
        /* Ensure Font Awesome icons display properly with TailwindCSS */
        .fas, .far, .fab, .fal, .fad {
            font-family: "Font Awesome 6 Free" !important;
            font-weight: 900 !important;
            display: inline-block !important;
        }
        
        /* Fix navbar components */
        .navbar-nav {
            display: flex !important;
            flex-direction: row !important;
        }
        
        .nav-item {
            display: block !important;
        }
        
        .nav-link {
            display: block !important;
            padding: 0.5rem 1rem !important;
        }
        
        /* Ensure icons in TailwindCSS sections work */
        .tailwind-section i {
            font-family: "Font Awesome 6 Free" !important;
            font-weight: 900 !important;
            display: inline-block !important;
        }
    </style>
}

<div class="min-h-screen bg-gray-50 py-8 tailwind-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="bg-gradient-to-r from-success to-green-600 rounded-2xl shadow-xl p-6 mb-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="p-3">
                        <i class="fas fa-handshake text-white text-2xl"></i>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-white">Sales Profile</h1>
                        <p class="text-green-100 mt-1">Your sales performance dashboard</p>
                    </div>
                </div>
                <a asp-controller="Settings" asp-action="Index" class="text-white px-6 py-3 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Profile Info Card -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-success px-6 py-4">
                        <h2 class="text-xl font-semibold text-white flex items-center">
                            <i class="fas fa-user mr-3"></i>
                            Profile Information
                        </h2>
                    </div>
                    <div class="p-6">
                        <div class="text-center mb-6">
                            <div class="w-20 h-20 bg-success rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-handshake text-white text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-2">@Model.FullName</h3>
                            <p class="text-gray-600 mb-3">@Model.Email</p>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                @Model.Role
                            </span>
                        </div>
                        
                        <div class="space-y-4">
                           
                            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                                <i class="fas fa-check-circle text-green-500 mr-3"></i>
                                <div>
                                    <p class="font-medium text-gray-900">Status</p>
                                    <p class="text-sm text-green-600">@Model.AccountStatus</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- KPIs Card -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-info px-6 py-4">
                        <h2 class="text-xl font-semibold text-white flex items-center">
                            <i class="fas fa-chart-line mr-3"></i>
                            Sales KPIs & Performance
                        </h2>
                    </div>
                    <div class="p-6">
                        <!-- Primary KPIs Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                            <div class="bg-gradient-to-r from-primary to-primary-dark rounded-xl p-6 text-white">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-blue-100 text-sm font-medium">Assigned Leads</p>
                                        <p class="text-3xl font-bold">@Model.AssignedLeads</p>
                                    </div>
                                    <div class="p-3">
                                        <i class="fas fa-tasks text-2xl"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-gradient-to-r from-success to-green-600 rounded-xl p-6 text-white">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-green-100 text-sm font-medium">Leads â†’ Units</p>
                                        <p class="text-3xl font-bold">@Model.LeadsConvertedToUnits</p>
                                    </div>
                                    <div class="p-3">
                                        <i class="fas fa-home text-2xl"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-gradient-to-r from-warning to-yellow-600 rounded-xl p-6 text-white">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-yellow-100 text-sm font-medium">Units Sold</p>
                                        <p class="text-3xl font-bold">@Model.UnitsSold</p>
                                    </div>
                                    <div class="p-3">
                                        <i class="fas fa-dollar-sign text-2xl"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-gradient-to-r from-info to-cyan-600 rounded-xl p-6 text-white">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-cyan-100 text-sm font-medium">Conversion Rate</p>
                                        <p class="text-3xl font-bold">@Model.LeadConversionRate.ToString("F1")%</p>
                                    </div>
                                    <div class="p-3">
                                        <i class="fas fa-percentage text-2xl"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Performance Metrics -->
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm font-medium text-gray-600">Active Tasks</span>
                                    <span class="text-2xl font-bold text-primary">@Model.ActiveTasks</span>
                                </div>
                            </div>
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm font-medium text-gray-600">Completed</span>
                                    <span class="text-2xl font-bold text-success">@Model.CompletedTasks</span>
                                </div>
                            </div>
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm font-medium text-gray-600">Sales Rate</span>
                                    <span class="text-2xl font-bold text-warning">@Model.UnitSalesRate.ToString("F1")%</span>
                                </div>
                            </div>
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm font-medium text-gray-600">Total Leads</span>
                                    <span class="text-2xl font-bold text-info">@Model.AssignedLeads</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="mt-8">
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                <div class="bg-gray-800 px-6 py-4">
                    <h2 class="text-xl font-semibold text-white flex items-center">
                        <i class="fas fa-history mr-3"></i>
                        Recent Activity - Last 5 Assigned Tasks
                    </h2>
                </div>
                <div class="p-6">
                    @if (Model.RecentTasks.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client Name</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assigned</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Activity</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var task in Model.RecentTasks)
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors @(task.IsUrgent ? "bg-yellow-50" : "")">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="font-medium text-gray-900">@task.ClientName</div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-gray-600">@task.ClientPhone</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-gray-600">@task.ProjectName</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary text-white">
                                                    @task.Status
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-gray-600">@task.AssignedAt.ToString("MMM dd, yyyy")</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-gray-500">@(task.LastActivityAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                @if (task.IsUrgent)
                                                {
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-warning text-white">
                                                        Urgent
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                        Normal
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-12">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-inbox text-gray-400 text-2xl"></i>
                            </div>
                            <p class="text-gray-500 text-lg">No recent tasks found</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



