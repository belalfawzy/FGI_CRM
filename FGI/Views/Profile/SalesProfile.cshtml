@model FGI.ViewModels.SalesProfileViewModel
@{
    ViewData["Title"] = "My Profile - Sales";
}

@section Head {
    <link rel="stylesheet" href="~/css/bootstrap-profile.css" asp-append-version="true">
}

<div class="profile-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="profile-header fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <div class="profile-header-icon">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <div>
                            <h1 class="profile-header-title">Sales Profile</h1>
                            <p class="profile-header-subtitle">Sales Dashboard & Lead Management</p>
                            <div class="profile-status">@Model.AccountStatus</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="@Url.Action("Create", "Lead")" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>New Lead
                    </a>
                </div>
            </div>
            <!-- Floating Elements -->
            <div class="floating-element" style="top: 20px; right: 20px; width: 60px; height: 60px; background: #007bff;"></div>
            <div class="floating-element" style="bottom: 20px; left: 20px; width: 40px; height: 40px; background: #6f42c1;"></div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon primary">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="metric-value">@Model.AssignedLeads</div>
                    <div class="metric-label">Assigned Leads</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="metric-value">@Model.UnitsSold</div>
                    <div class="metric-label">Units Sold</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon warning">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="metric-value">@Model.ActiveTasks</div>
                    <div class="metric-label">Active Tasks</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon info">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <div class="metric-value">@Model.LeadConversionRate.ToString("P1")</div>
                    <div class="metric-label">Conversion Rate</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- Lead Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-primary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Lead Management</h3>
                                <p class="card-header-subtitle">Manage your sales leads</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-primary">@Model.AssignedLeads</h4>
                                    <small class="text-muted">Assigned Leads</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.LeadsConvertedToUnits</h4>
                                    <small class="text-muted">Converted to Units</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Create", "Lead")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add New Lead
                            </a>
                            <a href="@Url.Action("MyLeads", "Sales")" class="btn btn-outline-primary">
                                <i class="fas fa-list me-2"></i>View My Leads
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales Performance -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-success">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Sales Performance</h3>
                                <p class="card-header-subtitle">Track your sales metrics</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.UnitsSold</h4>
                                    <small class="text-muted">Units Sold</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.UnitSalesRate.ToString("P1")</h4>
                                    <small class="text-muted">Sales Rate</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("MyUnits", "Sales")" class="btn btn-success">
                                <i class="fas fa-chart-line me-2"></i>View My Units
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Task Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-warning">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Task Management</h3>
                                <p class="card-header-subtitle">Manage your sales tasks</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.ActiveTasks</h4>
                                    <small class="text-muted">Active Tasks</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.CompletedTasks</h4>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("MyTasks", "Sales")" class="btn btn-warning">
                                <i class="fas fa-list me-2"></i>View My Tasks
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Unit Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-info">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Unit Management</h3>
                                <p class="card-header-subtitle">Manage available units</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.LeadsConvertedToUnits</h4>
                                    <small class="text-muted">Converted to Units</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.UnitsSold</h4>
                                    <small class="text-muted">Units Sold</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("AvailableUnits", "Sales")" class="btn btn-info">
                                <i class="fas fa-search me-2"></i>Browse Units
                            </a>
                            <a href="@Url.Action("MyUnits", "Sales")" class="btn btn-outline-info">
                                <i class="fas fa-list me-2"></i>My Units
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Tasks -->
            <div class="col-12 mb-4">
                <div class="profile-card">
                    <div class="card-header-secondary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Recent Tasks</h3>
                                <p class="card-header-subtitle">Your latest task activities</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Client Name</th>
                                        <th>Contact</th>
                                        <th>Project</th>
                                        <th>Status</th>
                                        <th>Assigned</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RecentTasks.Any())
                                    {
                                        @foreach (var task in Model.RecentTasks.Take(5))
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@task.ClientName</strong>
                                                    @if (task.IsUrgent)
                                                    {
                                                        <span class="badge bg-danger ms-2">Urgent</span>
                                                    }
                                                </td>
                                                <td>
                                                    <i class="fas fa-phone text-success me-1"></i>
                                                    @task.ClientPhone
                                                </td>
                                                <td>@task.ProjectName</td>
                                                <td><span class="status-badge sales">@task.Status</span></td>
                                                <td>@task.AssignedAt.ToString("MMM dd, yyyy")</td>
                                                <td>
                                                    <a href="@Url.Action("LeadDetails", "Sales", new { id = task.LeadId })" class="btn btn-sm btn-outline-primary me-1">View</a>
                                                    <a href="@Url.Action("LeadDetails", "Sales", new { id = task.LeadId })" class="btn btn-sm btn-outline-success">Update</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted">No recent tasks</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>