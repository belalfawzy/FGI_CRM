@model FGI.ViewModels.MarketingProfileViewModel
@{
    ViewData["Title"] = "My Profile - Marketing";
}

@section Head {
    <link rel="stylesheet" href="~/css/bootstrap-profile.css" asp-append-version="true">
}

<div class="profile-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="profile-header fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <div class="profile-header-icon">
                            <i class="fas fa-bullhorn"></i>
                        </div>
                        <div>
                            <h1 class="profile-header-title">Marketing Profile</h1>
                            <p class="profile-header-subtitle">Marketing Dashboard & Lead Management</p>
                            <div class="profile-status">@Model.AccountStatus</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <button class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>New Lead
                    </button>
                </div>
            </div>
            <!-- Floating Elements -->
            <div class="floating-element" style="top: 20px; right: 20px; width: 60px; height: 60px; background: #007bff;"></div>
            <div class="floating-element" style="bottom: 20px; left: 20px; width: 40px; height: 40px; background: #6f42c1;"></div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon primary">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="metric-value">@Model.LeadsCreated</div>
                    <div class="metric-label">Leads Created</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon success">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="metric-value">@Model.UnitsAdded</div>
                    <div class="metric-label">Units Added</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon warning">
                        <i class="fas fa-comments"></i>
                    </div>
                    <div class="metric-value">@Model.FeedbacksGiven</div>
                    <div class="metric-label">Feedbacks Given</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="metric-card fade-in-up">
                    <div class="metric-icon info">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <div class="metric-value">@Model.LeadToUnitConversionRate.ToString("P1")</div>
                    <div class="metric-label">Conversion Rate</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- Lead Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-primary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Lead Management</h3>
                                <p class="card-header-subtitle">Manage your marketing leads</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-primary">@Model.ActiveLeads</h4>
                                    <small class="text-muted">Active Leads</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.CompletedLeads</h4>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add New Lead
                            </button>
                            <button class="btn btn-outline-primary">
                                <i class="fas fa-list me-2"></i>View All Leads
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Performance Analytics -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-success">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Performance Analytics</h3>
                                <p class="card-header-subtitle">Track your marketing performance</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.LeadToUnitConversionRate.ToString("P1")</h4>
                                    <small class="text-muted">Conversion Rate</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.UnitsAdded</h4>
                                    <small class="text-muted">Units Added</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">
                                <i class="fas fa-chart-line me-2"></i>View Analytics
                            </button>
                            <button class="btn btn-outline-success">
                                <i class="fas fa-download me-2"></i>Export Report
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Unit Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-warning">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Unit Management</h3>
                                <p class="card-header-subtitle">Manage available units</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.UnitsAdded</h4>
                                    <small class="text-muted">Units Added</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.FeedbacksGiven</h4>
                                    <small class="text-muted">Feedbacks Given</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-warning">
                                <i class="fas fa-plus me-2"></i>Add New Unit
                            </button>
                            <button class="btn btn-outline-warning">
                                <i class="fas fa-list me-2"></i>View All Units
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Feedback Management -->
            <div class="col-lg-6 mb-4">
                <div class="profile-card">
                    <div class="card-header-info">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-comments"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Feedback Management</h3>
                                <p class="card-header-subtitle">Manage lead feedback</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.FeedbacksGiven</h4>
                                    <small class="text-muted">Feedbacks Given</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.LeadsCreated</h4>
                                    <small class="text-muted">Total Leads</small>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-info">
                                <i class="fas fa-comments me-2"></i>View Feedbacks
                            </button>
                            <button class="btn btn-outline-info">
                                <i class="fas fa-plus me-2"></i>Add Feedback
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Leads -->
            <div class="col-12 mb-4">
                <div class="profile-card">
                    <div class="card-header-secondary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Recent Leads</h3>
                                <p class="card-header-subtitle">Your latest lead activities</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Lead Name</th>
                                        <th>Contact</th>
                                        <th>Project</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RecentLeads.Any())
                                    {
                                        @foreach (var lead in Model.RecentLeads.Take(5))
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@lead.ClientName</strong>
                                                </td>
                                                <td>
                                                    <i class="fas fa-phone text-success me-1"></i>
                                                    @lead.ClientPhone
                                                </td>
                                                <td>@lead.ProjectName</td>
                                                <td><span class="status-badge marketing">@lead.Status</span></td>
                                                <td>@lead.CreatedAt.ToString("MMM dd, yyyy")</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary me-1">View</button>
                                                    <button class="btn btn-sm btn-outline-success">Edit</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted">No recent leads</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Performance Overview -->
            <div class="col-12 mb-4">
                <div class="profile-card">
                    <div class="card-header-primary">
                        <div class="d-flex align-items-center">
                            <div class="card-header-icon">
                                <i class="fas fa-chart-pie"></i>
                            </div>
                            <div>
                                <h3 class="card-header-title">Performance Overview</h3>
                                <p class="card-header-subtitle">Your marketing performance metrics</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-primary">@Model.LeadsCreated</h4>
                                    <small class="text-muted">Leads Created</small>
                                    <div class="progress mt-2" style="height: 4px;">
                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-success">@Model.UnitsAdded</h4>
                                    <small class="text-muted">Units Added</small>
                                    <div class="progress mt-2" style="height: 4px;">
                                        <div class="progress-bar bg-success" style="width: 75%"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-warning">@Model.FeedbacksGiven</h4>
                                    <small class="text-muted">Feedbacks Given</small>
                                    <div class="progress mt-2" style="height: 4px;">
                                        <div class="progress-bar bg-warning" style="width: 60%"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="text-center">
                                    <h4 class="text-info">@Model.LeadToUnitConversionRate.ToString("P1")</h4>
                                    <small class="text-muted">Conversion Rate</small>
                                    <div class="progress mt-2" style="height: 4px;">
                                        <div class="progress-bar bg-info" style="width: @(Model.LeadToUnitConversionRate * 100)%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>