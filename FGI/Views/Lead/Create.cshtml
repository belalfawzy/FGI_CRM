@model Lead
@{
    ViewData["Title"] = "Add New Lead";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create New Lead</h1>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Lead Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="leadForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClientName" class="control-label">Client Name *</label>
                            <input asp-for="ClientName" class="form-control"
                                   placeholder="Enter client name (max 25 chars)"
                                   maxlength="25" required />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClientPhone" class="control-label">Phone Number *</label>
                            <input asp-for="ClientPhone" class="form-control"
                                   placeholder="Enter phone number"
                                   type="tel" required />
                            <span asp-validation-for="ClientPhone" class="text-danger"></span>
                            <small class="form-text text-muted search-hint">Start typing to search for existing owners</small>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label">Project (Optional)</label>
                            <select asp-for="ProjectId" id="ProjectId" class="form-control select2"
                                    asp-items="ViewBag.Projects">
                                <option value="">-- Search All Projects --</option>
                            </select>
                            <small class="form-text text-muted">Leave empty to search in all projects</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitId" class="control-label">Unit *</label>
                            <select asp-for="UnitId" id="UnitId" class="form-control select2" required>
                                <option value="">Search by Unit Code, Location or Description...</option>
                            </select>
                            <span asp-validation-for="UnitId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Comment" class="control-label">Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="3"
                                      placeholder="Enter any additional comments (max 1000 chars)"
                                      maxlength="1000"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Enhanced Unit Details Section -->
                <div class="row mt-3" id="unitDetailsContainer" style="display: none;">
                    <div class="col-md-12">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Unit Details
                                        </div>
                                        <div class="row mt-2" id="unitDetailsContent">
                                            <!-- Unit details will be loaded here -->
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-home fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4 text-center">
                    <button type="submit" id="saveButton" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-save" id="saveIcon"></i>
                            <span class="spinner-border spinner-border-sm" id="saveSpinner" style="display:none;"></span>
                        </span>
                        <span class="text" id="saveText">Save Lead</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Marketing/CreateLead.css" asp-append-version="true">
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/Marketing/CreateLead.js" asp-append-version="true"></script>
}