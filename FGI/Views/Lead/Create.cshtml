@model Lead
@{
    ViewData["Title"] = "Add New Lead";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create New Lead</h1>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Lead Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="leadForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClientName" class="control-label">Client Name *</label>
                            <input asp-for="ClientName" class="form-control" placeholder="Enter client name" required />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClientPhone" class="control-label">Phone Number *</label>
                            <input asp-for="ClientPhone" class="form-control" placeholder="Enter phone number" required />
                            <span asp-validation-for="ClientPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label">Project (Optional)</label>
                            <select asp-for="ProjectId" id="ProjectId" class="form-control select2"
                                    asp-items="ViewBag.Projects">
                                <option value="">-- Search All Projects --</option>
                            </select>
                            <small class="form-text text-muted">Leave empty to search in all projects</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitId" class="control-label">Unit *</label>
                            <select asp-for="UnitId" id="UnitId" class="form-control select2" required>
                                <option value="">Search by Unit Code, Location or Description...</option>
                            </select>
                            <span asp-validation-for="UnitId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Unit Details Section -->
                <div class="row mt-3" id="unitDetailsContainer" style="display: none;">
                    <div class="col-md-12">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Unit Details
                                        </div>
                                        <div class="row mt-2" id="unitDetailsContent">
                                            <!-- Unit details will be loaded here -->
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-home fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4 text-center">
                    <button type="submit" id="saveButton" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-save" id="saveIcon"></i>
                            <span class="spinner-border spinner-border-sm" id="saveSpinner" style="display:none;"></span>
                        </span>
                        <span class="text" id="saveText">Save Lead</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        .select2-container .select2-selection--single {
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: calc(1.5em + 0.75rem + 2px);
        }

        .unit-detail-row {
            margin-bottom: 8px;
        }

        .unit-detail-label {
            font-weight: bold;
            margin-right: 5px;
        }

        .select2-results__option--highlighted[aria-disabled=true] {
            color: #6c757d !important;
            background-color: #f8f9fa !important;
        }

        [aria-required="true"]:after {
            content: " *";
            color: red;
        }

        .select2-selection__clear {
            margin-right: 20px;
        }

        .search-hint {
            font-size: 0.8rem;
            color: #6c757d;
            margin-top: 5px;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                placeholder: "Select an option",
                allowClear: true
            });

            // Unit search functionality
            var unitSelect = $('#UnitId').select2({
                placeholder: "Search by Unit Code, Location, or Description",
                minimumInputLength: 2,
                width: '100%',
                ajax: {
                    url: '@Url.Action("GetUnits", "Lead")',
                    dataType: 'json',
                    delay: 300,
                    data: function(params) {
                        return {
                            projectId: $('#ProjectId').val() || 0,
                            term: params.term,
                            _: new Date().getTime()
                        };
                    },
                    processResults: function(data) {
                        return {
                            results: $.map(data, function(item) {
                                return {
                                    id: item.id,
                                    text: item.text,
                                    disabled: item.disabled,
                                    unit: item.unit
                                };
                            })
                        };
                    },
                    error: function(xhr) {
                        console.error('Search error:', xhr.responseText);
                    },
                    cache: true
                },
                templateResult: function(item) {
                    if (item.loading) return item.text;
                    var $result = $('<span>' + item.text + '</span>');
                    if (item.disabled) {
                        $result.append(' <span class="badge badge-danger">Not Available</span>');
                        $result.addClass('text-muted');
                    } else {
                        $result.append(' <span class="badge badge-success">Available</span>');
                    }
                    return $result;
                },
                templateSelection: function(item) {
                    if (item.id === '') return item.text;
                    return item.text + (item.disabled ? ' (Not Available)' : '');
                }
            });

            // Update unit search when project changes
            $('#ProjectId').on('change', function() {
                $('#UnitId').val(null).trigger('change');
            });

            // Show unit details when selected
            unitSelect.on('change', function() {
                var unitId = $(this).val();
                if (unitId) {
                    $('#unitDetailsContent').html('<div class="col-12 text-center"><i class="fas fa-spinner fa-spin"></i> Loading...</div>');
                    $('#unitDetailsContainer').show();

                    $.get('@Url.Action("GetUnitDetails", "Lead")', { id: unitId })
                        .done(function(data) {
                            $('#unitDetailsContent').html(data);
                        })
                        .fail(function() {
                            $('#unitDetailsContent').html('<div class="col-12 text-danger">Error loading details</div>');
                        });
                } else {
                    $('#unitDetailsContainer').hide();
                }
            });

            // Form submission handler
                $('#leadForm').on('submit', function (e) {
            e.preventDefault();

            if (!$(this).valid()) return false;

            var $btn = $('#saveButton');
            $btn.prop('disabled', true);         // قفل الزرار
            $('#saveIcon').hide();
            $('#saveSpinner').show();
            $('#saveText').text('Saving...');

            var formData = new FormData(this);

            $.ajax({
                url: '@Url.Action("Create", "Lead")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        toastr.success(response.message);
                        // هنا مش هنفعل الزرار تاني عشان العملية نجحت
                        setTimeout(function () {
                            window.location.href = response.redirect || '@Url.Action("Index")';
                        }, 1500);
                    } else {
                        toastr.error(response.message);
                        if (response.errors) {
                            response.errors.forEach(function (error) {
                                toastr.error(error);
                            });
                        }
                        // لو فيه خطأ، فعل الزرار تاني
                        $btn.prop('disabled', false);
                        $('#saveIcon').show();
                        $('#saveSpinner').hide();
                        $('#saveText').text('Save Lead');
                    }
                },
                error: function () {
                    toastr.error('Failed to save lead. Please try again.');
                    // فعل الزرار في حالة الخطأ
                    $btn.prop('disabled', false);
                    $('#saveIcon').show();
                    $('#saveSpinner').hide();
                    $('#saveText').text('Save Lead');
                }
            });
        });
        });
    </script>
}