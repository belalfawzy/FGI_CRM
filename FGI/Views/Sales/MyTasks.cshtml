@using FGI.Enums
@model List<Lead>
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
            <div>
                <h1 class="h3 mb-1 text-gray-800">My New Leads</h1>
                <p class="mb-0 text-muted">New leads assigned to you</p>
            </div>
            <div class="d-flex align-items-center">
                <div class="badge bg-primary text-white rounded-pill p-2 ms-2">
                    <i class="fas fa-users me-1"></i> <span id="leadCount">@Model.Count</span> Leads
                </div>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card stat-card primary h-100">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">New Leads</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Leads Table -->
        <div class="card mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold">New Leads</h6>
            </div>
            <div class="card-body">
                @if (Model.Count == 0)
                {
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="fas fa-info-circle me-3 fa-2x"></i>
                        <div>
                            <h5 class="alert-heading">No Leads Assigned</h5>
                            <p class="mb-0">You currently have no leads assigned to you.</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="leadsTable" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Client</th>
                                    <th>Contact</th>
                                    <th>Project</th>
                                    <th>Unit</th>
                                    <th>Price</th>
                                    <th>Area</th>
                                    <th>Created</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lead in Model)
                                {
                                    <tr class="lead-card">
                                        <td>
                                            <div class="font-weight-bold">@lead.ClientName</div>
                                            @if (!string.IsNullOrEmpty(lead.Comment))
                                            {
                                                <small class="text-muted lead-comment">@lead.Comment</small>
                                            }
                                        </td>
                                        <td>
                                            <a href="tel:@lead.ClientPhone" class="text-primary call-link">
                                                <i class="fas fa-phone-alt me-1"></i> @lead.ClientPhone
                                            </a>
                                            @if (!string.IsNullOrEmpty(lead.ClientName))
                                            {
                                                <div class="mt-1">
                                                    <a class="text-muted small">
                                                        @lead.ClientName
                                                    </a>
                                                </div>
                                            }
                                        </td>
                                        <td>@(lead.Project?.Name ?? "N/A")</td>
                                        <td>@(lead.Unit?.UnitCode ?? "N/A")</td>
                                        <td>@(lead.Unit?.Price.ToString("C") ?? "N/A")</td>
                                        <td>@(lead.Unit?.Area != null ? $"{lead.Unit.Area} sqm" : "N/A")</td>
                                        <td>
                                            <div>@lead.CreatedAt.ToString("dd MMM yyyy")</div>
                                            <small class="text-muted">@lead.CreatedAt.ToString("h:mm tt")</small>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center">
                                                <a asp-action="LeadDetails" asp-route-id="@lead.Id" class="action-btn btn btn-sm btn-info me-1">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="tel:@lead.ClientPhone" class="action-btn btn btn-sm btn-success me-1 call-link">
                                                    <i class="fas fa-phone"></i>
                                                </a>
                                                <a href="#" class="action-btn btn btn-sm btn-secondary note-link" data-comment="@lead.Comment">
                                                    <i class="fas fa-sticky-note"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Notes Modal -->
    <div class="modal fade" id="notesModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Lead Notes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modalComment"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

   @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Custom JS -->
    <script src="~/js/sales/my-new-leads.js" asp-append-version="true"></script>
   }
<link rel="stylesheet" href="~/css/sales/my-new-leads.css" asp-append-version="true">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
