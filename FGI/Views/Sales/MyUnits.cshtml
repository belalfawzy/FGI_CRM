@model List<Unit>
@{
    ViewData["Title"] = "My Units";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="AddUnit" class="d-none d-sm-inline-block btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Unit
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">All Your Units</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Unit Code</th>
                                <th>Type</th>
                                <th>Sale Type</th>
                                <th>Location</th>
                                <th>Area (sqm)</th>
                                <th>Bed/Bath</th>
                                <th>Price</th>
                                <th>Owner</th>
                                <th>Project</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var unit in Model)
                            {
                                <tr>
                                    <td>@(unit.UnitCode ?? "N/A")</td>
                                    <td>@unit.Type</td>
                                    <td>@unit.UnitType</td>
                                    <td>@unit.Location</td>
                                    <td>@unit.Area.ToString("N0")</td>
                                    <td>@unit.Bedrooms / @unit.Bathrooms</td>
                                    <td>
                                        @if (unit.Currency == Currency.USD)
                                        {
                                            <span>$</span>
                                        }
                                        else
                                        {
                                            <span>EGP</span>
                                        }
                                        @unit.Price.ToString("N0")
                                    </td>
                                    <td>@(unit.Owner?.Name ?? "N/A")</td>
                                    <td>@(unit.Project?.Name ?? "N/A")</td>
                                    <td>
                                        @if (unit.IsAvailable)
                                        {
                                            <span class="badge badge-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Sold</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <button class="btn btn-sm btn-primary view-details mr-2"
                                                    data-id="@unit.Id"
                                                    title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <a asp-action="EditUnit" asp-controller="Sales" asp-route-id="@unit.Id"
                                               class="btn btn-sm btn-info" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Unit Details Modal -->
                <div class="modal fade" id="unitDetailsModal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-home"></i> Unit Details
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="unitDetailsContent">
                                <!-- Content will be loaded here via AJAX -->
                                <div class="text-center py-5">
                                    <i class="fas fa-spinner fa-spin fa-3x"></i>
                                    <p>Loading data...</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle mr-2"></i> You don't have any units yet.
                    <a asp-action="AddUnit" class="alert-link">Add your first unit</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .badge-success {
            background-color: #1cc88a;
            color: #fff;
        }

        .badge-danger {
            background-color: #e74a3b;
            color: #fff;
        }

        .badge-warning {
            background-color: #f6c23e;
            color: #000;
        }

        .view-details {
            min-width: 32px;
        }

        .table th {
            white-space: nowrap;
        }

        .modal-lg {
            max-width: 900px;
        }

        .table td, .table th {
            vertical-align: middle;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            line-height: 1.5;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Handle details button click
            $('.view-details').on('click', function() {
                var unitId = $(this).data('id');
                var url = '@Url.Action("GetUnitDetails", "Sales")' + '?id=' + unitId;

                // Show loading spinner
                $('#unitDetailsContent').html(`
                    <div class="text-center py-5">
                        <i class="fas fa-spinner fa-spin fa-3x"></i>
                        <p>Loading unit details...</p>
                    </div>
                `);

                // Show modal
                $('#unitDetailsModal').modal('show');

                // Load data via AJAX
                $.get(url)
                    .done(function(data) {
                        $('#unitDetailsContent').html(data);
                    })
                    .fail(function() {
                        $('#unitDetailsContent').html(`
                            <div class="alert alert-danger text-center py-4">
                                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                                <h5>Error loading unit details</h5>
                                <p>Please try again later</p>
                            </div>
                        `);
                    });
            });

            // Clear modal content when closed
            $('#unitDetailsModal').on('hidden.bs.modal', function () {
                $('#unitDetailsContent').empty();
            });
        });
    </script>
}