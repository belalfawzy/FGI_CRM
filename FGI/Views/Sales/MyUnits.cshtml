@using FGI.Enums
@model List<Unit>
@{
    ViewData["Title"] = "My Units";
    var userRole = User.IsInRole("Sales") ? "Sales" : "Marketing";
}

<div class="app-container">
    <div class="header">
        <h1 class="page-title"><i class="fas fa-home"></i> @ViewData["Title"]</h1>
        <a asp-action="AddUnit" class="add-btn"><i class="fas fa-plus"></i> Add New Unit</a>
    </div>

    <section class="units-section">
        <div class="section-header">
            <h2 class="section-title"><i class="fas fa-list"></i> All Your Units</h2>
        </div>
        <div class="units-container">
            @if (Model.Any())
            {
                foreach (var unit in Model)
                {
                    <div class="unit-card @(ViewBag.SelectedUnitId == unit.Id ? "active" : "")" data-id="@unit.Id">
                        <div class="unit-info">
                            <div class="unit-code">@(unit.UnitCode ?? "N/A")</div>
                            <div class="unit-meta">
                                <span>@unit.Type • @unit.UnitType</span>
                                <span>@unit.Area.ToString("N0") sqm</span>
                                <span>@unit.Bedrooms Bed / @unit.Bathrooms Bath</span>
                            </div>
                        </div>
                        <div class="unit-right">
                            <div class="unit-price">
                                @if (unit.Currency == Currency.USD)
                                {
                                    <span>$</span>
                                }
                                else
                                {
                                    <span>EGP</span>
                                }
                                @unit.Price.ToString("N0")
                            </div>
                            <div class="unit-status @(unit.IsAvailable ? "status-available" : "status-sold")">
                                @(unit.IsAvailable ? "Available" : "Sold")
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-units fade-in">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h5>You don't have any units yet.</h5>
                    <a asp-action="AddUnit" class="alert-link">Add your first unit</a>
                </div>
            }
        </div>
    </section>

    <section class="details-section">
        <div class="details-header">
            <h2 class="section-title"><i class="fas fa-info-circle"></i> Unit Details</h2>
            <button id="closeDetails" class="btn-close"><i class="fas fa-times"></i></button>
        </div>
        <div class="details-content">
            <div id="noUnitSelected" class="no-selection">
                <i class="fas fa-home fa-3x"></i>
                <h3>No Unit Selected</h3>
                <p>Select a unit from the list to view details</p>
            </div>
            <div id="unitDetailsContent" style="display: none;"></div>
        </div>
    </section>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/sales/my-units.css" asp-append-version="true">
}

@section Scripts {
    <script>
        var currentUserRole = '@userRole';
    </script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/sales/my-units.js" asp-append-version="true"></script>
}