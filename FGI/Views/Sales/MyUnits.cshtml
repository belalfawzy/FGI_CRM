@using FGI.Enums
@model List<Unit>
@{
    ViewData["Title"] = "My Units";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-dark">@ViewData["Title"]</h1>
        <a asp-action="AddUnit" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-1"></i> Add New Unit
        </a>
    </div>

    <div class="card shadow-sm mb-4 fade-in">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-home me-1"></i> All Your Units</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Unit Code</th>
                                <th>Type</th>
                                <th>Sale Type</th>
                                <th>Location</th>
                                <th>Area (sqm)</th>
                                <th>Bed/Bath</th>
                                <th>Price</th>
                                <th>Owner</th>
                                <th>Project</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var unit in Model)
                            {
                                <tr>
                                    <td>@(unit.UnitCode ?? "N/A")</td>
                                    <td>@unit.Type</td>
                                    <td>@unit.UnitType</td>
                                    <td>@unit.Location</td>
                                    <td>@unit.Area.ToString("N0")</td>
                                    <td>@unit.Bedrooms / @unit.Bathrooms</td>
                                    <td>
                                        @if (unit.Currency == Currency.USD)
                                        {
                                            <span>$</span>
                                        }
                                        else
                                        {
                                            <span>EGP</span>
                                        }
                                        @unit.Price.ToString("N0")
                                    </td>
                                    <td>@(unit.Owner?.Name ?? "N/A")</td>
                                    <td>@(unit.Project?.Name ?? "N/A")</td>
                                    <td>
                                        @if (unit.IsAvailable)
                                        {
                                            <span class="badge badge-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Sold</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-primary view-details" data-id="@unit.Id">
                                                <i class="fas fa-eye me-1"></i> 
                                            </button>
                                            <a asp-action="EditUnit" asp-controller="Sales" asp-route-id="@unit.Id"
                                               class="btn btn-sm btn-info">
                                                <i class="fas fa-edit me-1"></i> 
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Unit Details Modal -->
                <div class="modal fade" id="unitDetailsModal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-home me-1"></i> Unit Details
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" id="unitDetailsContent">
                                <div class="text-center py-5">
                                    <i class="fas fa-spinner fa-spin fa-3x"></i>
                                    <p>Loading data...</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info fade-in">
                    <i class="fas fa-info-circle me-2"></i> You don't have any units yet.
                    <a asp-action="AddUnit" class="alert-link">Add your first unit</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/sales/my-units.css" asp-append-version="true">
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/sales/my-units.js" asp-append-version="true"></script>
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">