@model Unit
@{
    ViewData["Title"] = "Add New Unit";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]
            </h6>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <form asp-action="AddUnit" method="post" id="unitForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <!-- Basic Information -->
                    <div class="col-md-6">
                        <div class="card mb-4 border-left-primary">
                            <div class="card-header bg-light py-3">
                                <h6 class="m-0 font-weight-bold text-primary">
                                    <i class="fas fa-info-circle me-2"></i>Basic Information
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="UnitCode" class="font-weight-bold">Unit Code</label>
                                    <input asp-for="UnitCode" class="form-control" placeholder="Enter unit code" />
                                    <span asp-validation-for="UnitCode" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Type" class="font-weight-bold">Unit Type</label>
                                    <select asp-for="Type" class="form-control custom-select" asp-items="Html.GetEnumSelectList<UnitType>()">
                                        <option value="">-- Select Unit Type --</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ProjectId" class="font-weight-bold">Project</label>
                                    <select asp-for="ProjectId" class="form-control custom-select" asp-items="ViewBag.Projects">
                                        <option value="">-- Select Project --</option>
                                    </select>
                                    <span asp-validation-for="ProjectId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location Details -->
                    <div class="col-md-6">
                        <div class="card mb-4 border-left-success">
                            <div class="card-header bg-light py-3">
                                <h6 class="m-0 font-weight-bold text-primary">
                                    <i class="fas fa-map-marker-alt me-2"></i>Location Details
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Location" class="font-weight-bold">Location</label>
                                    <input asp-for="Location" class="form-control" placeholder="Enter location" />
                                    <span asp-validation-for="Location" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Specifications -->
                    <div class="col-md-6">
                        <div class="card mb-4 border-left-info">
                            <div class="card-header bg-light py-3">
                                <h6 class="m-0 font-weight-bold text-primary">
                                    <i class="fas fa-ruler-combined me-2"></i>Specifications
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Area" class="font-weight-bold">Area (sqm)</label>
                                    <input asp-for="Area" class="form-control" type="number" step="0.01" placeholder="Enter area" />
                                    <span asp-validation-for="Area" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Bedrooms" class="font-weight-bold">Bedrooms</label>
                                    <input asp-for="Bedrooms" class="form-control" type="number" placeholder="Enter number of bedrooms" />
                                    <span asp-validation-for="Bedrooms" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Bathrooms" class="font-weight-bold">Bathrooms</label>
                                    <input asp-for="Bathrooms" class="form-control" type="number" placeholder="Enter number of bathrooms" />
                                    <span asp-validation-for="Bathrooms" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Details -->
                    <div class="col-md-6">
                        <div class="card mb-4 border-left-warning">
                            <div class="card-header bg-light py-3">
                                <h6 class="m-0 font-weight-bold text-primary">
                                    <i class="fas fa-money-bill-wave me-2"></i>Financial Details
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Price" class="font-weight-bold">Price</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="OwnerPhone" class="font-weight-bold">Owner Phone Number</label>
                                    <input asp-for="OwnerPhone" class="form-control" placeholder="Enter owner phone number" />
                                    <span asp-validation-for="OwnerPhone" class="text-danger small"></span>
                                </div>

                                <div class="form-group">
                                    <label class="font-weight-bold">Price per Sqm</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input type="text" class="form-control" id="pricePerSqm" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="card mb-4 border-left-secondary">
                    <div class="card-header bg-light py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-align-left me-2"></i>Additional Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Description" class="font-weight-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter any additional details"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-right mt-4">
                    <a asp-action="AllUnits" class="btn btn-secondary mr-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Unit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }

        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 0.75rem 1.25rem;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        label {
            font-weight: 600;
            color: #4a4a4a;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .input-group-text {
            background-color: #f8f9fc;
            color: #4a4a4a;
        }

        .form-control, .custom-select {
            border-radius: 0.35rem;
            padding: 0.375rem 0.75rem;
            font-size: 0.9rem;
        }

            .form-control:focus, .custom-select:focus {
                border-color: #bac8f3;
                box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
            }

        #pricePerSqm {
            background-color: #f8f9fc;
            color: #4a4a4a;
        }

        .text-danger.small {
            font-size: 0.8rem;
        }

        .btn {
            padding: 0.375rem 1.5rem;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }

        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }

        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }

        .border-left-secondary {
            border-left: 0.25rem solid #858796 !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Calculate price per sqm
            $('#Price, #Area').on('input', function() {
                const price = parseFloat($('#Price').val()) || 0;
                const area = parseFloat($('#Area').val()) || 0;
                const pricePerSqm = area > 0 ? (price / area).toFixed(2) : 0;
                $('#pricePerSqm').val(pricePerSqm);
            });

            // Initialize price per sqm on page load
            $('#Price').trigger('input');
        });
    </script>
}