@model FGI.Models.Unit

<div class="unit-details-card">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h6 class="mb-0">
                <i class="fas fa-home me-2"></i>
                Unit Details
            </h6>
        </div>
        <div class="card-body">
            <div class="row" data-project-id="@(Model.ProjectId ?? 0)">
                <div class="col-md-6">
                    <div class="unit-detail-item">
                        <strong>Unit Code:</strong> 
                        <span>@(Model.UnitCode ?? "N/A")</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Location:</strong> 
                        <span>@(Model.Location ?? "N/A")</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Type:</strong> 
                        <span>@Model.Type.ToString()</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Sale Type:</strong> 
                        <span>@Model.UnitType.ToString()</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Project:</strong> 
                        <span>@(Model.Project?.Name ?? "N/A")</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="unit-detail-item">
                        <strong>Price:</strong> 
                        <span class="text-success fw-bold">
                            @Model.Price.ToString("N0") + " " + Model.Currency
                        </span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Area:</strong> 
                        <span>@(Model.Area > 0 ? Model.Area.ToString() + " m²" : "N/A")</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Bedrooms:</strong> 
                        <span>@(Model.Bedrooms.ToString())</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Bathrooms:</strong> 
                        <span>@Model.Bathrooms.ToString()</span>
                    </div>
                    <div class="unit-detail-item">
                        <strong>Available:</strong> 
                        <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                            @(Model.IsAvailable ? "Yes" : "No")
                        </span>
                    </div>
                </div>
            </div>
            
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="unit-detail-item">
                            <strong>Description:</strong>
                            <p class="mt-1 mb-0 text-muted">@Model.Description</p>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Owner != null)
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-user me-1"></i>
                            Owner Information
                        </h6>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="unit-detail-item">
                                    <strong>Name:</strong> 
                                    <span>@(Model.Owner.Name ?? "N/A")</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="unit-detail-item">
                                    <strong>Phone:</strong> 
                                    <span>@(Model.Owner.Phone ?? "N/A")</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="unit-detail-item">
                                    <strong>Email:</strong> 
                                    <span>@(Model.Owner.Email ?? "N/A")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.unit-details-card {
    margin-top: 15px;
}

.unit-detail-item {
    margin-bottom: 8px;
    padding: 4px 0;
    border-bottom: 1px solid #f0f0f0;
}

.unit-detail-item:last-child {
    border-bottom: none;
}

.unit-detail-item strong {
    color: #495057;
    font-weight: 600;
    min-width: 120px;
    display: inline-block;
}

.unit-detail-item span {
    color: #6c757d;
}
</style>